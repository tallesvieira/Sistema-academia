{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="http:/instructors/create">Add Instructor</a>
    <table width = 100%>
        <thead>
            <tr>
                <th>Instructor</th>
                <th>Attendance</th>
                <th>Ação</th>
            </tr>
        </thead>

        <tbody>
            {% for instructor in instructors %}
                <tr>
                    <td>
                        <span style="background-image: url({{instructor.avatar_url}})"></span>
                        {{instructor.name}}
                    </td>
                    <td>
                        <div>
                            {{instructor.services}}
                        </div>
                    </td>
                    <td><a href="/instructors/{{instructor.id}}">ver</a></td>
                </tr>
            {%endfor%}
        </tbody>

    </table>
</div>
{% endblock content %}